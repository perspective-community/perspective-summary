{
  "name": "@finos/perspective",
  "version": "3.8.0",
  "description": "",
  "repository": {
    "type": "git",
    "url": "https://github.com/finos/perspective"
  },
  "type": "module",
  "license": "Apache-2.0",
  "unpkg": "dist/cdn/perspective.js",
  "jsdelivr": "dist/cdn/perspective.js",
  "exports": {
    ".": {
      "node": {
        "types": "./dist/esm/perspective.node.d.ts",
        "default": "./dist/esm/perspective.node.js"
      },
      "types": "./dist/esm/perspective.browser.d.ts",
      "default": "./dist/esm/perspective.js"
    },
    "./node": {
      "types": "./dist/esm/perspective.node.d.ts",
      "default": "./dist/esm/perspective.node.js"
    },
    "./dist/*": "./dist/*",
    "./src/*": "./src/*",
    "./test/*": "./test/*",
    "./package.json": "./package.json",
    "./tsconfig.json": "./tsconfig.json"
  },
  "files": [
    "dist/**/*",
    "src/**/*",
    "tsconfig.json"
  ],
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "pro_self_extracting_wasm": "0.0.9",
    "stoppable": "^1.1.0",
    "ws": "^8.17.0"
  },
  "devDependencies": {
    "@types/stoppable": "^1.1.0",
    "@types/ws": "^8.18.1",
    "apache-arrow": "18.1.0",
    "cpy": "^9.0.1",
    "lodash": "^4.17.21",
    "moment": "^2.30.1",
    "typedoc": "^0.28.7",
    "typescript": "~5.2.2",
    "underscore": "^1.13.6",
    "zx": "8.3.0",
    "@finos/perspective-server": "^3.8.0",
    "@finos/perspective-test": "^3.8.0",
    "@finos/perspective-esbuild-plugin": "^3.8.0",
    "@finos/perspective-metadata": "^2.0.1"
  },
  "scripts": {
    "build": "node ./build.js",
    "clean": "rimraf dist && rimraf build && rimraf src/ts/ts-rs",
    "docs": "npx typedoc --tsconfig tsconfig.browser.json --out ../../docs/static/browser && npx typedoc --tsconfig tsconfig.node.json --out ../../docs/static/node"
  }
}